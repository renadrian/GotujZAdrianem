<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Dodaj przepis"
            android:id="@+id/naglowek"
            android:textSize="25dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_below="@+id/naglowek"
            android:hint="Tytuł"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/introduction"
            android:layout_below="@+id/title"
            android:hint="Wprowadzenie"
            android:inputType="textMultiLine"
            android:lines="2"
            android:gravity="top|left"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients"
            android:layout_below="@+id/introduction"
            android:hint="Składniki"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|left"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/steps"
            android:layout_below="@+id/ingredients"
            android:hint="Przygotowanie"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="top|left"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preparationMinutes"
            android:layout_below="@+id/steps"
            android:hint="Czas przygotowania (w minutach)"
            android:inputType="number"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cookingMinutes"
            android:layout_below="@+id/preparationMinutes"
            android:hint="Czas gotowania (w minutach)"
            android:inputType="number"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/servings"
            android:layout_below="@+id/cookingMinutes"
            android:hint="Ilość porcji (sztuki)"
            android:inputType="number"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDodawania"
            android:layout_below="@+id/servings"
            android:text="Dodaj"/>
    </RelativeLayout>
</ScrollView>